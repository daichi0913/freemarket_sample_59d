%main.main
  %section.contents
    .regi__title 会員情報入力
    %form{:action => "https://www.mercari.com/jp/signup/sms_confirmation/", :method => "POST", :novalidate => "novalidate"}
      %input{:name => "__csrf_value", :type => "hidden", :value => "f9c02a2dc7ff947faf4a7ec455d3f085db62de845785cd085ed0079d1e5d7b2954f8757e47c9feafc687cbf1b4b8f046935165397fcb27c368494b4a61ad14ea0"}/
      .form__box
        .form-group
          %label{:for => "nickname"} ニックネーム
          %span.form-require 必須
          %input.input-default{:name => "nickname", :placeholder => "例) メルカリ太郎", :type => "text", :value => ""}/
        .form-group
          %label{:for => "email"} メールアドレス
          %span.form-require 必須
          %input.input-default{:name => "email", :placeholder => "PC・携帯どちらでも可", :type => "email", :value => ""}/
        %input{:name => "login_type", :type => "hidden", :value => ""}/
        .form-group
          %label{:for => "password"} パスワード
          %span.form-require 必須
          %input.input-default{:name => "password", :placeholder => "7文字以上", :type => "password"}/
        .form-group
          %label{:for => "password"} パスワード (確認)
          %span.form-require 必須
          %input.input-default{:name => "password2", :placeholder => "7文字以上", :type => "password"}/
        .form-group
          %h3.text-left.l-chapter-sub-head 本人確認
