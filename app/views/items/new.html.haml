          -#   %option{value: category.id} #{category.name}
          %option{selected:"selected"} ---


        %select.category_select.hidden{name: "add_category"}
          %option{selected:"selected"} ---
          %option{selected:"selected"} ---
          -# -@categories. each do |category|
          -#   %option{value: category.id} #{category.name}
          
        
        %label{for: "size"} サイズ
        %span.form-require 必須

        %label{for: "brand"} ブランド
        %span.brand 任意
        %input.input-default{name: "brand", placeholder: "例）シャネル", type: "text", value: ""}/

        %label{for: "item_status"} 商品の状態
        %span.form-require 必須
        %input.input-default{name: "brand", placeholder: "例）シャネル", :type => "text", :value => ""}/

        %label{for: "shippin_fee"} 配送料の負担
        %span.form-require 必須
        %input.input-default

        %label{for: "from_where"} 発送元の地域
        %span.form-require 必須
        %input.input-default


        %label{for: "how_many_days"} 発送までの日数
        %span.form-require 必須
        %input.input-default









        %select.category_select{name: "category"}
          %option{selected:"selected"} ---
