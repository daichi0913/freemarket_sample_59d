        -#   .items-imag-3
        -#   .items-text-3
        -#     .items-text-name-3
        -#       マークが書いた絵
        -#     .items-text-name1-3
        -#       .items-text-price-3
        -#         ¥2,000,000
        -#       .items-math-3
        -#         1
        -#       .items-heart-3
        -#         = fa_icon "heart-o"

  -#                 ///////////詳細のフッター////////////////////////

  .item-second-footer
    .item-footer-main
      .item-footer-name
        メルカリ
        .item-footer-icon
          = fa_icon "angle-right"
